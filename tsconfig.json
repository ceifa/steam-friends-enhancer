{
    "compilerOptions": {
        "noImplicitAny": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "module": "commonjs",
        "target": "ES2018",
        "allowJs": false,
        "lib": [
            "es2018",
            "dom"
        ],
        "plugins": [
            {
                "name": "typescript-tslint-plugin",
                "configFile": "./tslint.json"
            }
        ],
        "esModuleInterop": true
    }
}