{
    "name": "Steam Friends Enhancer",
    "version": "0.0.2",
    "manifest_version": 2,
    "description": "Improve steam friends experience",
    "icons": {
        "128": "./static/icon-128px.png"
    },
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "*://steamcommunity.com/id/*/friends/*"
            ],
            "js": [
                "./js/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "/js/background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "/js/injected.js"
    ],
    "permissions": [
        "*://steamcommunity.com/id/*/friends/*"
    ]
}